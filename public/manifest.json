{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "NetBuddy Extension",

  "icons": {
    "16": "icons/netbuddylogo-16.png",
    "32": "icons/netbuddylogo-32.png",
    "48": "icons/netbuddylogo-48.png",
    "128": "icons/netbuddylogo-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "ExecutionWorld": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["selector_generator.js"],
      "ExecutionWorld": "MAIN"
    },
    {
      "matches": ["https://localhost:5173/*"],
      "js": ["netbuddy_content.js"],
      "ExecutionWorld": "MAIN"
    }
  ],

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "scripting",
    "background",
    "tabs",
    "contextMenus",
    "webRequest",
    "alarms",
    "clipboardWrite",
    "clipboardRead",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}